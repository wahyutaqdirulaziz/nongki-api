generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}


model User {
  id    Int     @default(autoincrement()) @id
  email String  @unique
  password String
  name  String?
  address String?
  gender  Gender? @default(OTHER) // Mengubah menjadi tipe enum Gender
  status_married String?
  posts Post[]
}

model Post {
  id        Int      @default(autoincrement()) @id
  title     String
  content   String?
  published Boolean? @default(false)
  author    User?    @relation(fields: [authorId], references: [id])
  authorId  Int?
}


enum Gender {
  MALE
  FEMALE
  OTHER
}